<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="4dp"
        android:gravity="start"
        android:padding="12dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size_24"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        />

    <LinearLayout
        android:id="@+id/ll_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="@dimen/standart_padding_16">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_search"
            style="@style/MainActivityButtonStyle"
            android:text="@string/search"
            app:icon="@drawable/ic_search_light_mode"
        />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_library"
            style="@style/MainActivityButtonStyle"
                 android:text="@string/library"
            app:icon="@drawable/ic_library_light_mode"
  />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_settings"
            style="@style/MainActivityButtonStyle"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings_light_mode"
      />


    </LinearLayout>
</LinearLayout>

