<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/ll_settings_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:gravity="start|top"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/ll_settings_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:gravity="start|center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standart_icon_size_24"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_arrow_back_light_mode" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_26"

                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dark_theme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_size_61"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml">


            <TextView
                android:id="@+id/tv_dark_theme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_padding_16"
                android:layout_weight="1"
                android:text="@string/dark_theme"
                android:textColor="@color/black"
                android:textSize="@dimen/regular_text_size_16" />

            <Switch
                android:id="@+id/sw_dark_theme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/standart_padding_16"
                android:paddingRight="-12dp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_size_61"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standart_padding_16"
                android:layout_weight="1"
                android:text="@string/share"
                android:textColor="@color/black"
                android:textSize="@dimen/regular_text_size_16" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standart_icon_size_24"
                android:layout_marginEnd="@dimen/standart_padding_16"
                android:src="@drawable/ic_share_light_mode" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_size_61"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/standart_padding_16"
                android:layout_weight="1"
                android:text="@string/support"
                android:textColor="@color/black"
                android:textSize="@dimen/regular_text_size_16" />

            <ImageView
                android:id="@+id/iv_support"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standart_icon_size_24"
                android:layout_marginEnd="@dimen/standart_padding_16"
                android:src="@drawable/ic_support_light_mode" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_size_61"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/standart_padding_16"
                android:layout_weight="1"
                android:text="@string/agreement"
                android:textColor="@color/black"
                android:textSize="@dimen/regular_text_size_16" />

            <ImageView
                android:id="@+id/iv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standart_icon_size_24"
                android:layout_marginEnd="@dimen/standart_padding_16"
                android:src="@drawable/ic_arrow_forward_light_mode" />

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />




</androidx.constraintlayout.widget.ConstraintLayout>