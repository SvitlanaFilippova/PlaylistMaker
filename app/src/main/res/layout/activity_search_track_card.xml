<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/search_supersmall_margin_size_4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_iv_cover"
                android:layout_width="@dimen/search_image_size_45"
                android:layout_height="@dimen/search_image_size_45"
                android:layout_margin="@dimen/small_margin_8"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/search_ll_track_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/search_tv_track_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_trackname_height_19"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/regular_text_size_16"
                    tools:text="Smells Like Teen Spirit Smells Like Teen Spirit Smells Like Teen Spirit" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_artistname_height_13"
                    android:divider="@drawable/ic_search_textdivider"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <!--TODO починить длину текста в названии группы, сейчас некорректно отображается, если коороткое-->
                    <TextView
                        android:id="@+id/search_tv_artist_name"
                        style="@style/SearchSmallTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:maxLines="1"
                        tools:text="NirvanaNirvanaNirvana" />


                    <TextView
                        android:id="@+id/search_tv_track_time"
                        style="@style/SearchSmallTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        tools:text="5:01" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/search_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standart_icon_size_24"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/search_margin_size_12"
                app:srcCompat="@drawable/ic_arrow_forward_light_mode" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>