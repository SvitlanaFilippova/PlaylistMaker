<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLayoutStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="ParentVerticalLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size_24</item>
        <item name="cornerRadius">@dimen/standart_button_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/standart_icon_size_24</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/settings_row_size_64</item>
        <item name="android:textSize">@dimen/regular_text_size_16</item>
        <item name="android:paddingHorizontal">@dimen/standart_padding_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="ListSmallTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/small_text_size_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ListRegularTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchTrackTitleStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaceholderMessageTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/search_error_text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="PlaceholderButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/search_error_button_radius_56</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_error_button_text_size_14</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="HeadToolbarTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">@dimen/small_margin_8</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/button_text_size_24</item>
    </style>

    <style name="PlayerMainTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>

    </style>

    <style name="PlaylistTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/playlist_title_text_24</item>
    </style>


    <style name="PlaylistRegularTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/playlist_regular_text_18</item>
    </style>


    <style name="PlaylistCardTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size_12</item>
    </style>

    <style name="AddToPlaylistTitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/add_to_playlist_text_size_19</item>
    </style>


    <style name="NewPlaylistTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/input_filled_stroke_colors</item>

    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="PlayerSmallTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_small_text_13</item>
    </style>

    <style name="PlayerLeftSmallTextStyle" parent="PlayerSmallTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
    </style>


    <style name="BottomSheetStyle">
        <item name="elevation">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="CustomRoundedCorners_8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/playlist_cover_radius_8</item>
    </style>

    <style name="CustomRoundedCorners_2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/search_image_corner_radius_2</item>
    </style>

    <dimen name="add_to_playlist_text_size_19">19sp</dimen>
    <dimen name="playlist_title_text_24">24sp</dimen>
    <dimen name="playlist_regular_text_18">18sp</dimen>
</resources>