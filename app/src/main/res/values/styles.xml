<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityLayoutStyle">
     <item name="android:background">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ParentVerticalLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size_24</item>
        <item name="cornerRadius">@dimen/standart_button_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/standart_icon_size_24</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_text_size_16</item>
        <item name="android:layout_marginStart">@dimen/standart_padding_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/standart_icon_size_24</item>
        <item name="android:layout_marginEnd">@dimen/standart_padding_16</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="HeadToolbarLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_toolbar_layout_height_56</item>
        <item name="android:layout_marginEnd">@dimen/standart_padding_16</item>
        <item name="android:layout_marginStart">@dimen/small_margin_8</item>
        <item name="android:layout_marginTop">@dimen/standart_padding_16</item>
        <item name="android:gravity">start|center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HeadToolbarArrowIconStyle">
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/standart_icon_size_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/small_margin_8</item>
        <item name="android:src">@drawable/ic_arrow_back_light_mode</item>
    </style>

<style name="HeadToolbarTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:layout_marginStart">@dimen/small_margin_8</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textFontWeight">500</item>
    <item name="android:textSize">@dimen/button_text_size_24</item>
</style>

</resources>